<br>
<div style="width:300px; margin:auto; position:relative;">
<audio controls loop=true preload src="/music/howl.mp3" type="audio/mp3">
</audio>
</div>
    
    <br> <br>
<% if @organizer.date_of_tasks %>
    
   <p class="p11"> 
       <img src="/images/piplup.gif" alt="piplup" class="at_date" style="width:3%; length:3%">
            Tasks for: <%= @organizer.date_of_tasks %> 
       <img src="/images/mudkip.gif" alt="piplup" class="at_date" style="width:3%; length:3%">
    </p>
                    <br> <br>
         <% @organizer.tasks.each do |task| %>
            <p class="p7"> 
            <input type="checkbox" id="task<%=task.id%>" name="task<%=task.id%>" value="<%=task.task_name%>">
            <label for="task<%=task.id%>"> <%= task.task_name %> </label>
            </p> <br>
        <% end %>
                    <br> <br> <br>
    <div class="div1">
        <a href="/organizers"> <p class="p4"> 
        <button type="button" value="All Organizers" class="front_button"> 
        All Organizers </button> </p> </a> <br>

        <a href="/organizers/<%=@organizer.id%>/edit"> <p class="p4"> 
        <button type="button" value="Edit Organizer" class="front_button"> 
        Edit Organizer </button> </p> </a> <br>

        <form method="post" action="/organizers/<%=@organizer.id%>/delete">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <p class="p4"> 
        <input type="submit" value="Delete Organizer" class="front_button"> 
        </p> 
        </form> 
        <br> <br>
    </div>
<% end %>
