              <p class="p10"> <%= message %>. </p> <br>
        <% end %>
        <br> 
<% end %>

<form method="post" action="/entries">

    <p class="p7"> Which date is this entry for?</p>
    <input type="date" class="organizer_date" name="date">
<br> <br>
  <p class="p7">Write to your heart's content.</p>
<br> 

    <textarea required class="entry_input" type="text" name="content" rows="20" cols="150"></textarea> <br> <br> <br>
    
    <input type="submit" value="Create Journal Entry" class="front_button">

</form>

