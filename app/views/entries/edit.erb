<div style="width:300px; margin:auto; position:relative;">
<audio controls autoplay loop=true preload src="/music/everyheart.mp3" type="audio/mp3">
</audio>
</div>

<div class="div4">

<br> <br>
<% if @messages %>
<p class="p10"> There was an error saving your journal. </p>
        <% @messages.each do |message| %>
              <p class="p10"> <%= message %>. </p> <br>
        <% end %>
        <br> 
<% end %>

<form method="post" action="/entries">

    <p class="p7"> The entry for <%= @entry.date %> </p>
<br> <br>
  <p class="p7">Make any necessary changes:</p>
<br> 

    <textarea required type="text" class="entry_input" name="content" rows="20" cols="150" value="<%= @entry.content%>"> </textarea> 
    
    <input type="submit" value="Submit" class="front_button">

</form>

</div>
